[alias]
  a = add
  aa = add -A
  b = branch
  cb = checkout -b
  cm = checkout master
  co = checkout
  d = difftool
  l = log --pretty=colored
  m = merge --ff-only
  mt = mergetool
  pr = pull --rebase
[core]
  editor = vim
  excludesfile = ~/.gitignore
[diff]
  tool = vimdiff
[difftool]
  prompt = false
[merge]
  tool = fugitive
[mergetool]
  keepBackup = false
[mergetool "fugitive"]
  cmd = vim -f -c \"Gvdiff\" \"$MERGED\"
[pretty]
  colored = format:%Cred%h%Creset %s %Cgreen(%cr) %C(bold blue)%an%Creset
[push]
  default = simple
[user]
  name = Ryan Glassett
  email = rglassett@gmail.com
