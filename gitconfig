[alias]
  a = add
  aa = add -A
  b = branch
  cb = checkout -b
  cm = checkout master
  co = checkout
  d = difftool
  l = log --pretty=colored-oneline --date=short
  m = merge --ff-only
  mt = mergetool
  pr = pull --rebase
  r = rebase
[core]
  editor = vim
  excludesfile = ~/.gitignore
[diff]
  tool = vimdiff
[difftool]
  prompt = false
[merge]
  tool = vimdiff
[mergetool]
  keepBackup = false
[pretty]
  colored-oneline = format:%Cred%h%Creset %cd %Cblue%an%Creset %s
[push]
  default = simple
[user]
  name = Ryan Glassett
  email = rglassett@gmail.com
