[alias]
  a = add
  aa = add -A
  b = branch
  cm = commit
  co = checkout
  d = difftool
  l = log --pretty=colored-oneline --date=short
  mt = mergetool
  p = pull
[core]
  excludesfile = ~/.gitignore
[commit]
  template = ~/.gitmessage
[diff]
  tool = vimdiff
  compaction-heuristic = true
[difftool]
  prompt = false
[merge]
  ff = only
  tool = fugitive
[mergetool]
  keepBackup = false
[pretty]
  colored-oneline = format:%Cred%h%Creset %cd %Cblue%an%Creset %s
[pull]
  ff = only
[push]
  default = simple
[user]
  name = Ryan Glassett
  email = rglassett@gmail.com
[mergetool "fugitive"]
  cmd = vim -f -c \"Gdiff\" \"$MERGED\"
[include]
  path = ~/.gitconfig.local
